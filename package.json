{
  "name": "rocket-fist",
  "version": "0.0.1",
  "private": true,
  "description": "Rocket Fist - Gym Management Platform (Monorepo)",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=@rocket-fist/web",
    "dev:backend": "npm run dev --workspace=@rocket-fist/backend",
    "dev": "concurrently --names \"web,api\" --prefix-colors \"cyan,yellow\" \"npm run dev:web\" \"npm run dev:backend\"",
    "dev:desktop": "concurrently --names \"web,api,desktop\" --prefix-colors \"cyan,yellow,magenta\" \"npm run dev:web\" \"npm run dev:backend\" \"npm run dev --workspace=@rocket-fist/desktop\"",
    "desktop:build": "npm run build:web && npm run build --workspace=@rocket-fist/desktop",
    "build": "turbo build",
    "build:web": "turbo build --filter=@rocket-fist/web",
    "build:backend": "turbo build --filter=@rocket-fist/backend",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules .turbo"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3"
  }
}
