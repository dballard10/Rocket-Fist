{
  "name": "@rocket-fist/ui",
  "version": "0.0.1",
  "private": true,
  "description": "Shared UI components for Rocket Fist",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
