{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "composite": false,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@rocket-fist/domain": ["../../packages/domain/src"],
      "@rocket-fist/domain/*": ["../../packages/domain/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
